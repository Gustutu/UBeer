<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:id="@+id/rv_bar_element"

>

    <TextView
        android:id="@+id/rv_bar_element_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:maxLength="30"
        android:text="Babar"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rv_bar_element_isOpen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rv_bar_element_rate"
        android:layout_below="@+id/rv_bar_element_name"
        android:text="Open"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/rv_bar_element_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:text="3.5"
        android:textSize="20dp" />

</RelativeLayout>