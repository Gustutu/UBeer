<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context="org.esiea.catrisse_turrata.ubeer.SetupActivity">

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schema.android.com/apk/res-auto"
        android:id="@+id/rv_persons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">


    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/search"
        android:layout_width="80pt"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:text="@string/button_text"
        android:textColor="@color/colorPrimaryLight" />

    <Button
        android:id="@+id/add_Person"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/search"
        android:layout_alignParentEnd="true"
        android:width="20dp"
        android:height="20dp"
        android:background="@drawable/round_button"
        android:text="+"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="30sp" />

    <Button
        android:id="@+id/remove_Person"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/add_Person"
        android:layout_alignBottom="@+id/add_Person"
        android:layout_marginEnd="17dp"
        android:layout_toStartOf="@+id/add_Person"
        android:width="20dp"
        android:height="20dp"
        android:background="@drawable/round_button"
        android:text="-"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="30sp" />

    <Button
        android:id="@+id/gps_me"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/search"
        android:layout_toEndOf="@+id/GifImageView"
        android:width="20dp"
        android:height="20dp"
        android:background="@drawable/round_button"
        android:text="GPS"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="15sp" />

    <org.esiea.catrisse_turrata.ubeer.GifImageView
        android:id="@+id/GifImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />


</RelativeLayout>